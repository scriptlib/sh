#!/bin/sh
###7zfolder v0.1
###     - 7zfolder
###     - Written by duel, 2009-02-04
###Usage:
###     7zfolder
###Option:
###     -h Display help text
###Example:
###     7zfolder
scripthelp "$0" "$@" && exit 0
if [ -z "$1" ] ; then scripthelp "$0" "--help" ; exit 0 ; fi

opt="-r -scsUTF-8 -mx=0"
cdir=`pwd`
while [ -n "$1" ] ; do

    case $1 in 
    -*) 
        opt="$opt $1";;
    *) 
        folder=$1
        if [ -d "$folder" ] ; then
            echo "$folder [PROCESSING]"
            fn=`basename "$folder"`
            fn="$cdir/$fn.7z"
            pushd "$folder" >/dev/null
            echo 7z a $opt "$fn" .
            7z a $opt "$fn" .
            popd >/dev/null
        else
            echo "$folder [SKIPPED]"
        fi
    ;;
    esac

    shift
done
